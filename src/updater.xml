<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
		"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="updater" namespace="/" extends="updater-default">
		<!-- 1. 업로드 할 File meta-data -->
		<action name="metadata" class="com.ahnlab.updater.action.ASCAReceiptAction" method="uploadMetaData">
			<result name="success">/WEB-INF/jsp/response.jsp</result>
		</action>
		
		<!-- 2. 업로드 File -->
		<action name="upload" class="com.ahnlab.updater.action.ASCAReceiptAction" method="uploadFileData">
			<result name="success">/WEB-INF/jsp/response.jsp</result>
		</action>
	</package>
</struts>	
